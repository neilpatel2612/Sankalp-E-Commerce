@using Nop.Admin.Models.Sankalp;
@model SKL_ColorCodeModel
@{
    //page title
    ViewBag.Title = T("Admin.Sankalp.ColorCode.EditColorCodeDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("ColorCode");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "colorcode-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Sankalp.ColorCode.EditColorCodeDetails") - @Model.ColorCode
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.Sankalp.ColorCode.BackToList").Text, "List")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="colorcode-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("colorcode-delete")
